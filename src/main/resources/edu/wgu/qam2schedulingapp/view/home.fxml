<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="380.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.wgu.qam2schedulingapp.controller.HomeController">
    <Label alignment="TOP_CENTER" layoutX="10.0" layoutY="10.0" text="Home" AnchorPane.leftAnchor="0.0"
           AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="16.0">
        <font>
            <Font size="18.0"/>
        </font>
    </Label>
    <Separator layoutX="100.0" layoutY="57.0" prefWidth="200.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
               AnchorPane.topAnchor="48.0"/>
    <VBox alignment="CENTER" prefWidth="100.0" spacing="16.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="72.0">
        <Button mnemonicParsing="false" onAction="#showCustomersScreen" prefHeight="35.0" prefWidth="250.0"
                text="Customers Management">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#showAppointmentScreen" prefHeight="35.0" prefWidth="250.0"
                text="Appointment Management" VBox.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#showReportScreen" prefHeight="35.0" prefWidth="250.0" text="Reports">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Button>
        <Button mnemonicParsing="false" onAction="#exit" prefHeight="35.0" prefWidth="250.0" text="Exit">
            <font>
                <Font name="System Bold" size="13.0"/>
            </font>
        </Button>
    </VBox>
    <VBox layoutY="242.0" spacing="8.0" style="-fx-border-color: gray; -fx-border-radius: 5;"
          AnchorPane.bottomAnchor="12.0" AnchorPane.leftAnchor="12.0" AnchorPane.rightAnchor="12.0">
        <padding>
            <Insets bottom="12.0" top="12.0"/>
        </padding>
        <Label alignment="CENTER" maxWidth="1000.0" text="Upcoming Appointment" VBox.vgrow="ALWAYS">
            <font>
                <Font name="System Bold" size="16.0"/>
            </font>
        </Label>
        <Separator prefWidth="200.0"/>
        <Label alignment="CENTER" maxWidth="1000.0" text="No appointment in the next 15 minutes">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
    </VBox>
</AnchorPane>
